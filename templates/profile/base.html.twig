{% extends 'base.html.twig' %}

{% block title %}
    {{ 'profile.title'|trans }}
{% endblock %}

{% block body %}
    <h1>
        <i class="fa fa-user" aria-hidden="true"></i>
        {{ 'profile.title'|trans }}
        <small>
            {{ 'profile.subtitle'|trans }}
        </small>
    </h1>
    
    <hr>
        
    <div class="row">
        <div class="col-sm-4 col-lg-3 col-xl-2">
            <div class="list-group">
                <a href="{{ path('profile_index') }}" class="list-group-item list-group-item-action {% if current_item == 'index' %}active{% endif %}">
                    Geral
                </a>
                <a href="{{ path('profile_account') }}" class="list-group-item list-group-item-action {% if current_item == 'account' %}active{% endif %}">
                    Conta
                </a>
                <a href="{{ path('profile_lotacoes') }}" class="list-group-item list-group-item-action {% if current_item == 'lotacoes' %}active{% endif %}">
                    Lotações
                </a>
                <a href="{{ path('profile_tokens') }}" class="list-group-item list-group-item-action {% if current_item == 'tokens' %}active{% endif %}">
                    Access tokens
                </a>
            </div>
        </div>
        <div class="col-sm-8 col-lg-9 col-xl-10">
            {% block pageContent %}{% endblock %}
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body>section {
            padding: 20px 10px;
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
